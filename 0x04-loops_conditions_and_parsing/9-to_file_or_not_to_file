#!/usr/bin/env bash
# Tests the existence, size, and type of a file named 'school'.

FILE="school"

# 1. Check for existence (The outermost conditional)
if [ -e "$FILE" ]
then
    # File exists
    echo "$FILE file exists"

    # --- Nested Checks (ONLY run if file exists) ---

    # 2. Check for emptiness (using the -s operator)
    if [ -s "$FILE" ]
    then
        # If -s is true (size > 0), it is NOT empty
        echo "$FILE file is not empty"
    else
        # If -s is false, it IS empty (or existence was just barely confirmed above)
        echo "$FILE file is empty"
    fi

    # 3. Check for regular file type (using the -f operator)
    if [ -f "$FILE" ]
    then
        echo "$FILE is a regular file"
    # Note: If it's not a regular file (e.g., a directory), we do not print anything, so 'else' is omitted.
    fi

else
    # File does not exist
    echo "$FILE file does not exist"
fi

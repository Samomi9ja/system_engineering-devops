#!/usr/bin/env bash
# Loops from 1 to 10, displaying a different message for 4 and 8.

i=1  # Initialize counter variable 'i' to 1

while [ $i -le 10 ]  # Loop as long as 'i' is less than or equal to 10
do
    # Check if this is the 4th iteration
    if [ $i -eq 4 ]
    then
        echo "bad luck"
    # Else, check if this is the 8th iteration
    elif [ $i -eq 8 ]
    then
        echo "good luck"
    # Else (for all other numbers: 1, 2, 3, 5, 6, 7, 9, 10)
    else
        echo "Best School"
    fi

    # Increment the counter
    i=$((i + 1))
done

#!/usr/bin/env bash
# Displays "To infinity and beyond" indefinitely and catches SIGTERM (15) to print "I am invincible!!!".

# Define a function to handle SIGTERM
handle_sigterm() {
    # Using printf is crucial for reliable, unbuffered output in trap handlers
    printf "I am invincible!!!\n"
}

# Trap the SIGTERM signal (number 15) and execute the function
trap 'handle_sigterm' 15

while true
do
    echo "To infinity and beyond"
    sleep 2
done
